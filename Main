import tkinter as tk

# Función para abrir la ventana de detalles del evento
def abrir_detalles_evento(evento_id):
    # Aquí se agregaría la lógica para abrir la ventana de detalles del evento
    print(f"Mostrando detalles del evento {evento_id}")

# Función para abrir la ventana de búsqueda y filtrado de eventos
def abrir_busqueda_eventos():
    # Aquí se agregaría la lógica para abrir la ventana de búsqueda y filtrado de eventos
    print("Mostrando ventana de búsqueda y filtrado de eventos")

# Función para abrir la ventana de historial de eventos asistidos
def abrir_historial_eventos():
    # Aquí se agregaría la lógica para abrir la ventana de historial de eventos asistidos
    print("Mostrando historial de eventos asistidos")

# Crear una instancia de la ventana principal
ventana_principal = tk.Tk()
ventana_principal.title("Aplicación de Tour Musical")

# Botones para las secciones principales de la aplicación
btn_indice_eventos = tk.Button(ventana_principal, text="Índice de Eventos", command=lambda: abrir_detalles_evento(1))
btn_indice_eventos.pack()

btn_buscar_eventos = tk.Button(ventana_principal, text="Buscar y Filtrar Eventos", command=abrir_busqueda_eventos)
btn_buscar_eventos.pack()

btn_historial_eventos = tk.Button(ventana_principal, text="Historial de Eventos Asistidos", command=abrir_historial_eventos)
btn_historial_eventos.pack()

# Ejecutar el bucle principal de la aplicación
ventana_principal.mainloop()
